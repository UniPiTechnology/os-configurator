#!/bin/sh -e

# Post-inst maintainer script of os-configurator package
# See Readme of the package for info about licensing.


case "$1" in
  triggered)
    if [ -x /opt/unipi/tools/os-configurator ]; then
      echo "Calling os-configurator update..." >&2
      ( /opt/unipi/tools/os-configurator --force && dpkg-trigger os-configurator-done ) || echo "os-configurator return error, please call it manually."
    fi
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.
#DEBHELPER#
exit 0
